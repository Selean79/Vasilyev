<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >

    <Style x:Key="DialogWindowStyle">
        <Setter Property="Window.Background" Value="{x:Static SystemColors.ControlBrush}" />
        <Setter Property="Window.ShowInTaskbar" Value="false" />
        <Setter Property="Window.ResizeMode" Value="{x:Static ResizeMode.NoResize}" />
    </Style>
    
    <Style TargetType="TextBox">
        <Setter Property="Label.Padding" Value="2" />
        <Setter Property="Label.Margin" Value="2" />
    </Style>
    
    <Style TargetType="ComboBox">
        <Setter Property="Label.Padding" Value="2" />
        <Setter Property="Label.Margin" Value="2" />
    </Style>

    <Style x:Key="LabelStyle">
        <Setter Property="Label.Padding" Value="3, 1, 4, 1" />
        <Setter Property="Label.Margin" Value="0, 0, 0, 0" />
        <Setter Property="Label.BorderThickness" Value="1" />
        <Setter Property="Label.BorderBrush" Value="{x:Static SystemColors.ControlDarkBrush}" />
    </Style>
</ResourceDictionary>